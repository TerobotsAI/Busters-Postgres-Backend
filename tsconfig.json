{
  "compilerOptions": {
    "module": "commonjs",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "strictNullChecks": true
  },
  "include": [
   "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2015"
  ]
}